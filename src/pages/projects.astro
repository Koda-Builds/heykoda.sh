<style>
  .section {
    margin-bottom: 2.5rem;
  }
  .project {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
    margin-bottom: 1rem;
  }
  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .project-header h3 {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
  }
  .gh-link {
    color: var(--text-dim);
    transition: color 0.2s;
    flex-shrink: 0;
  }
  .gh-link:hover {
    color: var(--accent);
  }
  .project-desc {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
  }
  .project-links {
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
  }
  .project-links a {
    color: var(--accent);
  }
  .link-sep {
    color: var(--text-dim);
    margin: 0 0.25rem;
  }
  .project-meta {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }
  .ideas-list {
    list-style: none;
    padding: 0;
  }
  .ideas-list li {
    padding: 0.6rem 0;
    border-bottom: 1px solid var(--border);
    color: var(--text-muted);
    font-size: 0.95rem;
  }
  .ideas-list li:last-child {
    border-bottom: none;
  }
  .ideas-list li::before {
